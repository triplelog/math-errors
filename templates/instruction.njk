<div class="flex flex-wrap w-full">
	<div class="mx-8 px-8 py-4 border rounded">
		<div>
		{{ node.getAttribute("cards").in | safe }}
		</div>
		{% for constraint in node.getAttribute("cards").constraintsYes %}
		<hr>
		<div class="bg-green-200">
			{{ constraint | safe }}
		</div>
		{% endfor %}
		{% for constraint in node.getAttribute("cards").constraintsNo %}
		<hr>
		<div class="bg-red-200">
			{{ constraint | safe }}
		</div>
		{% endfor %}
	</div>
	<div class="mx-8 px-8 py-4 border rounded">
		{{ node.getAttribute("cards").out | safe }}
	</div>
</div>